@model Shop.Models.Product

@{
    ViewData["Title"] = "ProductDetails";
    List<Shop.Models.ProductImage> qwe = Model.ProductImages.ToList();

}


<h1 style="text-align:center;">@Model.Manufacturer.CompanyName @Model.Name</h1>
<div class="clearfix">
    <form id="@Model.Id" asp-controller="Cart" asp-action="AddToCart" method="post" class="float-xl-right mb-3 mr-2">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn btn-success">Добавить в корзину</button>
    </form>
</div>

<div class="flex-details">
    <div class="album">

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">


                @for (int i = 0; i < qwe.Count; i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="@qwe[i].Path" alt="Первый слайд">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="@qwe[i].Path" alt="Первый слайд">
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true" style="color:black"><i class="fas fa-arrow-left"></i></span>
                <span class="sr-only" style="color:black">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true" style="color:black"><i class="fas fa-arrow-right"></i></span>
                <span class="sr-only" style="color:black">Next</span>
            </a>
        </div>

    </div>
    <div class="description">
        <table class="table">

            <tr class="characteristics">
                <th><label asp-for="Name" :></label></th>
                <td><label>@Model.Name</label></td>
            </tr>
            <tr>
                <th><label asp-for="Manufacturer.CompanyName" :></label></th>
                <td><label>@Model.Manufacturer.CompanyName</label></td>
            </tr>
            <tr>
                <th><label asp-for="Weight" :></label></th>
                <td><label>@Model.Weight г.</label></td>
            </tr>
            <tr>
                <th><label asp-for="Price" :></label></th>
                <td><label>@Model.Price грн.</label></td>
            </tr>
            <tr>
                <th><label asp-for="Rating" :></label></th>
                <td><label>@Model.Rating</label></td>
            </tr>
            @foreach (var item in ViewBag.Description)
            {
                <tr class="characteristics">
                    <td>@item</td>
                </tr>
            }
        </table>

    </div>

</div>
<div class="comments">
    <h4 style="text-align:center;">Отзывы покупателей</h4>

    <div>
        
    </div>
</div>




